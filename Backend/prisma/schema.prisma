generator client {
  provider = "prisma-client"
  output   = "../src/generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String         @id         @default(uuid())
  email         String         @unique
  name          String
}

model Room {
  id                        String         @id         @default(uuid())
  people_ids                String[]    
  created_at                DateTime    @default(now())
  created_by                String
  room_name                 String
}

model Message {
  id            String         @id         @default(uuid())
  content       String
  sent_by_id    String      
  room_id       String      
  created_at    DateTime    @default(now())
}