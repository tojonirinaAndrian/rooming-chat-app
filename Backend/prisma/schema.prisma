generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            Int         @id         @default(autoincrement())
  email         String      @unique
  name          String
}

model Room {
  id                        Int         @id         @default(autoincrement())
  people                    Int[]       @default([])
  created_at                DateTime    @default(now())
  created_by                String
}

model Message {
  id            Int         @id         @default(autoincrement())
  content       String
  sent_by_id    String      
  room_id       String      
  created_at    DateTime    @default(now())
}